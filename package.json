{
  "name": "typescript-api",
  "version": "1.0.0",
  "description": "Surf weather report",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && node dist/index.js",
    "start:local": "dotenv -e .env -- ts-node-dev --transpile-only src/index.ts | pino-pretty -c",
    "test": "npm run lint && npm run style:check && npm run test:unit && npm run test:functional",
    "lint": "eslint ./src ./test --ext .ts",
    "lint:fix": "eslint ./src ./test --ext .ts --fix",
    "test:functional": "dotenv -e .env -- jest --projects ./test --runInBand",
    "test:unit": "jest --watch",
    "style:check": "prettier --check 'src/**/*.ts'",
    "style:fix": "prettier --write 'src/**/*.ts'"
  },
  "keywords": [
    "node",
    "nodejs",
    "typescript",
    "api"
  ],
  "author": "Gustavo Farias",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/waldemarnt/node-typescript-api/issues"
  },
  "homepage": "https://github.com/waldemarnt/node-typescript-api#readme",
  "dependencies": {
    "@overnightjs/core": "^1.7.5",
    "axios": "^0.21.1",
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "config": "^3.3.1",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-openapi-validator": "^3.16.1",
    "express-pino-logger": "^5.0.0",
    "express-rate-limit": "^5.1.3",
    "http-status-codes": "^1.4.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.19",
    "module-alias": "^2.2.2",
    "moment": "^2.27.0",
    "mongoose": "^5.9.18",
    "mysql": "^2.18.1",
    "node-cache": "^5.1.2",
    "pino": "^6.3.2",
    "reflect-metadata": "^0.1.13",
    "swagger-ui-express": "^4.1.4",
    "typeorm": "^0.2.32"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/bcrypt": "^3.0.0",
    "@types/config": "^0.0.36",
    "@types/cors": "^2.8.7",
    "@types/express": "^4.17.11",
    "@types/express-pino-logger": "^4.0.2",
    "@types/express-rate-limit": "^5.0.0",
    "@types/jest": "^25.2.2",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/lodash": "^4.14.155",
    "@types/module-alias": "^2.0.0",
    "@types/multer": "^1.4.3",
    "@types/node": "^13.13.2",
    "@types/pino": "^6.3.0",
    "@types/supertest": "^2.0.9",
    "@types/swagger-ui-express": "^4.1.2",
    "@typescript-eslint/eslint-plugin": "^2.29.0",
    "@typescript-eslint/parser": "^2.29.0",
    "dotenv-cli": "^3.2.0",
    "eslint": "^6.8.0",
    "jest": "^26.6.3",
    "nock": "^12.0.3",
    "pino-pretty": "^4.0.0",
    "prettier": "^2.0.5",
    "supertest": "^4.0.2",
    "ts-jest": "^26.4.4",
    "ts-node-dev": "^1.0.0-pre.61",
    "typescript": "^4.1.3",
    "@commitlint/cli": "^9.1.1",
    "@commitlint/config-conventional": "^9.1.1",
    "husky": "^4.2.5"
  },
  "_moduleAliases": {
    "@/": "dist/."
